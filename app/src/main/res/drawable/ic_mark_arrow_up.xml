<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:drawable="@drawable/ic_filter_background_selected" />
            <item android:width="28dp" android:height="28dp" android:gravity="center">
                <bitmap android:src="@drawable/ic_arrow_up" />
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/ic_filter_background_selected" />
            <item android:width="28dp" android:height="28dp" android:gravity="center">
                <bitmap android:src="@drawable/ic_arrow_up" />
            </item>
        </layer-list>
    </item>
    <item>

        <layer-list>
            <item android:drawable="@drawable/ic_filter_background_normal" />
            <item android:width="28dp" android:height="28dp" android:gravity="center">
                <bitmap android:src="@drawable/ic_arrow_up" />
            </item>
        </layer-list>
    </item>
</selector>